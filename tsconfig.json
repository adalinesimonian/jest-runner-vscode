{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "checkJs": true,
    "incremental": true,
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node"
  }
}
